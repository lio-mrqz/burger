<h1>Eat-Da-Burger!</h1>

<h2>Burgers!</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
    <li>
      {{this.burger_name}}
	    <button class="devoured-burger" data-id="{{this.id}}">Devour!</button>
    </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Devoured!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
    <li>
      {{this.burger_name}}
    </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form method="POST">

    <label for="brg">Burger Name:</label>
    <input type="text" id="brg" name="name">

  <input type="submit" value="OK">Add Burger</input>
</form>
